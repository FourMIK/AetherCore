{
  "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AetherCore Tactical Glass",
  "version": "0.1.0",
  "identifier": "com.aethercore.tactical-glass",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Tactical Glass",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://tile.openstreetmap.org https://*.tile.openstreetmap.org; connect-src 'self' ws://localhost:* wss://testnet.aethercore.local:* wss://*.aethercore.local:*; font-src 'self'; worker-src 'self' blob:; frame-src 'none'; object-src 'none';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "AetherCore Tactical Glass - Desktop Operator Interface",
    "longDescription": "AetherCore Tactical Glass provides operators with secure access to the mesh network, Zero-Touch device provisioning, and real-time telemetry visualization.",
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "license": "../../../LICENSE",
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["en-US"],
        "displayLanguageSelector": false
      },
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "11.0",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": "entitlements.plist",
      "dmg": {
        "background": null,
        "windowSize": {
          "width": 540,
          "height": 380
        },
        "appPosition": {
          "x": 140,
          "y": 120
        },
        "applicationFolderPosition": {
          "x": 400,
          "y": 120
        }
      }
    }
  }
}
