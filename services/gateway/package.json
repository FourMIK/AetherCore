{
  "name": "@aethercore/gateway",
  "version": "0.1.0",
  "description": "AetherCore Gateway Service",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm run proto:sync && pnpm run proto:types && tsc && node ./scripts/copy-proto-assets.mjs",
    "clean": "rm -rf dist",
    "dev": "tsc && node dist/index.js",
    "start": "node dist/index.js",
    "test": "pnpm run test:integration",
    "lint": "eslint src --ext .ts",
    "test:integration": "pnpm run build && node --test dist/__tests__/c2-client.integration.test.js",
    "proto:sync": "node ./scripts/sync-c2-proto.mjs",
    "proto:types": "pnpm exec proto-loader-gen-types --grpcLib=@grpc/grpc-js --outDir dist/generated proto/c2.proto"
  },
  "keywords": [
    "aethercore",
    "gateway"
  ],
  "author": "AetherCore Team",
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.14.3",
    "@grpc/proto-loader": "^0.8.0",
    "@types/ws": "^8.5.10",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "ws": "^8.16.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.19.30",
    "typescript": "^5.3.3"
  }
}
