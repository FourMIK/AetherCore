{
  "name": "aethercore-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "AetherCore monorepo integrating H2OS/4MIK",
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "agent/linux",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "preinstall": "node scripts/verify-toolchain.js",
    "build": "pnpm run build --recursive --filter=\"./packages/*\" --filter=\"./services/*\"",
    "test": "pnpm run test --recursive --filter=\"./packages/*\" --filter=\"./services/*\"",
    "lint": "pnpm run lint --recursive --filter=\"./packages/*\" --filter=\"./services/*\"",
    "lint:check": "eslint . --ext .ts,.tsx",
    "clean": "pnpm run clean --recursive --filter=\"./packages/*\" --filter=\"./services/*\""
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "prettier": "^3.8.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": "20.x",
    "pnpm": "9.15.0"
  },
  "dependencies": {
    "cargo": "^0.8.0"
  }
}
